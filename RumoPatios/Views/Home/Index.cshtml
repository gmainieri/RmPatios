<script>
    function executaCompleto(booleano) {
        $('#ajaxBusy').show();

        $.ajax({
            url: "../Home/ExecutaCompleto",
            success: function (data) {
                $("#resposta").html(data);
                $('#ajaxBusy').hide();
            }
        });
    }
</script>