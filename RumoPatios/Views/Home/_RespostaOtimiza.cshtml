@model RumoPatios.ViewModels.ResultadoOtimizaData

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="tabelaResposta" class="container">
    <h1 class="text-center">
        
    </h1>
    <table class="table table-striped table-bordered table-responsive table-condensed table-hover sortable">
        <thead>
            <tr>
                <th class="text-center" style="font-size:x-large" colspan="3">
                    Resposta otimização
                </th>
            </tr>
            <tr>
                <th class="col-lg-2">
                    Horario
                </th>
                <th class="col-lg-8">
                    Ação
                </th>
                <th class="col-lg-2">
                    Qtde manobras
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.rows)
            {
                <tr>
                    <td>@item.horario.ToString("yyyy/MM/dd HH:mm")</td>
                    <td>@item.acao</td>
                    <td>@item.qtdeManobras</td>
                </tr>
            }
        </tbody>
    </table>
</div>

